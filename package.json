{
  "name": "document-viewer-monorepo",
  "version": "1.0.0",
  "scripts": {
    "viewer:build": "pnpm --filter @document-kits/viewer run build",
    "viewer:release": "pnpm --filter @document-kits/viewer",
    "examples:dev": "pnpm --filter examples run dev",
    "docs:dev": "pnpm --filter viewer-docs run dev",
    "docs:build": "pnpm --filter viewer-docs run build",
    "docs:serve": "pnpm --filter viewer-docs run serve",
    "fmt": "npx prettier --write --ignore-unknown ."
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0",
    "vite": "^3.0.4"
  }
}
